@model List<MyNightDapperProject.DTOs.ProductDTO.ResultProductDTO>


@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
<div class="container">
<table class="table table-bordered">
    <br /><br />
    <tr>
        <th>#</th>
        <th>Ürün</th>
        <th>Stok Adedi</th>
        <th>Fiyat</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ProductID</td>
            <td>@item.ProductName</td>
            <td>@item.ProductStock</td>
            <td>@item.ProductPrice₺</td>
            <td><a href="/Product/DeleteProduct/@item.ProductID"class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Product/UpdateProduct/@item.ProductID" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Product/CreateProduct/"class="btn btn-outline-secondary">Yeni Ürün Girişi</a>
</div>
