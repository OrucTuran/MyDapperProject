@model MyNightDapperProject.DTOs.ProductDTO.GetByIdProductDTO

@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />

<div class="container">
    <br /><br />
    <form method="post">
        <input type="hidden" asp-for="ProductID" />
        <label>Ürün Adı</label>
        <input type="text" asp-for="ProductName" class="form-control" />
        <br />
        <label>Ürün Fiyatı</label>
        <input type="number" asp-for="ProductPrice" class="form-control" />
        <br />
        <label>Ürün Stok</label>
        <input type="number" asp-for="ProductStock" class="form-control" />
        <br />
        <button type="submit" class="btn btn-outline-success">Ürünü Güncelle</button>
    </form>
</div>